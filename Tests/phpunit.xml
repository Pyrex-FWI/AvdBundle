<?xml version="1.0" encoding="UTF-8"?>

<!-- http://phpunit.de/manual/4.3/en/appendixes.configuration.html -->
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="http://schema.phpunit.de/4.3/phpunit.xsd"
         backupGlobals="false"
         colors="true"
         bootstrap="./app/autoload.php"
         printerFile="AppTestListener.php"
         printerClass="DigitalDjPoolBundle\Tests\AppTestListener"
        >
    <testsuites>
        <testsuite name="Test Suite">
            <directory>./</directory>
            <exclude>./vendor</exclude>
        </testsuite>
    </testsuites>
    <filter>
        <blacklist>
            <directory suffix=".php">./</directory>
            <directory suffix=".php">./vendor</directory>
        </blacklist>
        <whitelist>
        <!-- lib subfolders to include -->
            <exclude>
                <directory suffix=".php">./vendor</directory>
                <directory suffix=".php">./Faker</directory>
                <directory suffix=".php">./app</directory>
                <file>./BaseTest.php</file>
                <file>./AppTestListener.php</file>
            </exclude>
            <directory>../Command</directory>
            <directory>../DependencyInjection</directory>
            <directory>../Entity</directory>
            <directory>../Exception</directory>
            <directory>../Provider</directory>
            <directory>../Serializer</directory>
        </whitelist>
    </filter>
    <logging>
        <log type="coverage-html" target="../build/coverage"/>
        <log type="coverage-clover" target="../build/logs/clover.xml"/>
        <log type="coverage-crap4j" target="../build/logs/crap4j.xml"/>
        <log type="junit" target="../build/logs/junit.xml" logIncompleteSkipped="false"/>
    </logging>
</phpunit>
